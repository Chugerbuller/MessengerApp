<Window x:Class="MessengerApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerApp.View"
        mc:Ignorable="d"
        Title="Messenger" Height="640" Width="820"
        Background="#FFE5B0">
    <Window.Resources>
        <Style x:Key="TextBlockBase">
            <Style.Setters>
                <Setter Property="TextBlock.Padding" Value="5"/>
                <Setter Property="TextBlock.Margin" Value="5" />
                <Setter Property="TextBlock.Foreground" Value="#7396E8" />
                <Setter Property="TextBlock.FontSize" Value="14" />
            </Style.Setters>
        </Style>
        <Style x:Key="MessagesList" BasedOn="{StaticResource TextBlockBase}">
            <Style.Setters>
                <Setter Property="ListBox.Background" Value="white" />
                <Setter Property="ListBox.BorderThickness" Value="0"/>
            </Style.Setters>
        </Style>

        <Style x:Key="MessageBorder">
            <Style.Setters>
                <Setter Property="Border.Background" Value="#7396E8" />
                <Setter Property="Border.CornerRadius" Value="13" />
                <Setter Property="Border.MinWidth" Value="100" />
                <Setter Property="Border.MaxWidth" Value="300" />
                <Setter Property="Border.Padding" Value="2" />
            </Style.Setters>
        </Style>
        <Style x:Key="MessageText" BasedOn="{StaticResource TextBlockBase}">
            <Style.Setters>
                <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                <Setter Property="TextBlock.Margin" Value="0" />
            </Style.Setters>
        </Style>
        <Style x:Key="ButtonMenu">
            <Style.Setters>
                <Setter Property="Button.Margin" Value="5" />
                <Setter Property="Button.Background" Value="#FFE5B0" />
                <Setter Property="Button.FontSize" Value="14"/>
                <Setter Property="Button.FontFamily" Value="Tahoma"/>
                <Setter Property="Button.BorderBrush" Value="#FFE5B0"/>
                <Setter Property="Button.BorderThickness" Value="2"/>
            </Style.Setters>
        </Style>
        <Style x:Key="TextBlockSearch">
            <Style.Setters>
                <Setter Property="TextBlock.Padding" Value="5"/>
                <Setter Property="TextBlock.Margin" Value="5" />
                <Setter Property="TextBlock.FontFamily" Value="Tahoma"/>
                <Setter Property="TextBlock.FontSize" Value="14" />
                <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
            </Style.Setters>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Button Content="Меню" Style="{StaticResource ButtonMenu}"/>
        <TextBlock Text="Поиск" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBlockSearch}" />
        <TextBox Grid.Row="0" Grid.Column="2" Margin="10"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="5">
            <ScrollViewer Name="scroll" CanContentScroll="True" Height="540"/>
            <ListView>
                <ListView.View>
                    <GridView>
                        
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <Border Grid.Column="3" Grid.Row="0" Grid.RowSpan="2">
            <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"
                     Style="{StaticResource MessagesList}" Name="MessagesList" Focusable="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <ListBoxItem>
                            <Border Style="{StaticResource MessageBorder}" HorizontalAlignment="{Binding Alignment}">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="" Style="{StaticResource MessageText}"/>
                                </StackPanel>
                            </Border>
                        </ListBoxItem>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>
